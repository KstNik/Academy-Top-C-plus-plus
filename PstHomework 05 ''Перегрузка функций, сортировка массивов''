	cout << "   – числа с плавающей точкой (тип – double): " << elem1of3 << ", " << elem2of3 << " и " << elem3of3 << ":" << endl;
	cout << "     max (перегруженная) = " << FuncMax3Elements(elem1of3, elem2of3, elem3of3) << ";" << endl;
